{% extends 'base.html.twig' %}

{% set class_attr = 'bg-white rounded border border-gray-400 focus:outline-none focus:border-indigo-500 text-base px-4 py-2 mb-4' %}
{# this form theme will be applied only to the form of this template #}
{#{% form_theme form 'form/tailwind_layout.html.twig' %}#}

{% block title %}New Post{% endblock %}

{% block body %}

    {{ form_start(form, {'attr': {'class': 'text-gray-700 body-font bg-gray-300'}}) }}
    <div class="lg:w-1/3 md:w-1/2 bg-white rounded-lg p-8 flex flex-col w-full mt-10 md:mt-0">
        <h2 class="text-gray-900 text-lg mb-1 font-medium title-font">Feedback</h2>
        <p class="leading-relaxed mb-5 text-gray-600">Post-ironic portland shabby chic echo park, banjo fashion axe</p>

        {{ form_errors(form) }}

        {{ form_row(form._token) }}
        {{ form_widget(form.title, {'attr':{'class': class_attr}}) }}
        {{ form_widget(form.image, {'attr':{'class': class_attr}}) }}
        {{ form_widget(form.body, {'attr':{'class': class_attr ~ ' h-32','placeholder': 'Enter Your Post'}, }) }}

        <button class="text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg">
            Button
        </button>

        <p class="text-xs text-gray-500 mt-3">Chicharrones blog helvetica normcore iceland tousled brook viral
            artisan.</p>
        <hr>

    </div>
    {#    <div class="hide">{{ form_rest(form) }}</div>#}

    {#    {{ form_end(form) }}#}
    {{ form_end(form, {'render_rest': false}) }}

{% endblock %}


